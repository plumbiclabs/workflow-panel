{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Vite",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE v.*started$",
          "endsPattern": "^.*Local:.*$"
        }
      }
    }
  ]
} 